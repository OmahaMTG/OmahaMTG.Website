@model IEnumerable<OmahaMtg.Data.BannerAdd>

@{
    ViewBag.Title = "Banner Adds";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Banner Adds</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RotationStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RotationEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@if (Model == null)
{
    <tr>
        <td colspan="6">
            No Records Found
        </td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsCurrent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RotationStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RotationEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.FileName.Equals("none"))
            {
                <span>none</span>
            }
            else
            {
                <img src="~/Content/Banners/@item.FileName" alt="@item.Name" class="banner-add-admin-list" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
}

</table>
