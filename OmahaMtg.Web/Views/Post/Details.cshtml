@using OmahaMtg.Posts
@model OmahaMtg.Posts.PostInfo

@{
    ViewBag.Title = "Details";
    
}


<h3 style="margin-top: 20px">@Html.DisplayFor(modelItem => modelItem.Title)</h3>

@{
    var info = Model as EventInfo;
    if (info != null)
    {
        
        
        <div>
            <span>Start Time: @info.EventStartTime </span>
            
            <span class="pull-right badge bg-darkCyan">
                @if (!User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("0 Members Going.  Login to RSVP", "Login", "Account", null, new { @class = "fg-white" })

                }
                else
                {
                    <a href="#" id="EventRSVP" data-event-id="@info.Id" data-currently-rsvpd='@(info.IsUserRsvpd ? "true" : "false")' class=" fg-white">@info.TotalRsvpCount Members Going.  @(info.IsUserRsvpd ? "Click To Remove RSVP" : "Click to RSVP")</a>
                }
            </span>

        </div>
        
    }
}

<hr style="margin: 0" />

<div>
    <span class="badge badge-success">Posted by @Html.DisplayFor(modelitem => modelitem.CreatedByUserName) at @Html.DisplayFor(modelItem => modelItem.PublishStartTime)</span>
    <div class="pull-right">
        @foreach (var group in Model.AvailableGroups.Where(w => Model.GroupTags.Contains(w.Key)))
        {
            <span class="label badge ">@group.Value</span>
        }
    </div>
</div>
<br/>

@if (Model is EventInfo && (Model as EventInfo).VimeoId.HasValue)
{
    <p>
        <iframe src="//player.vimeo.com/video/@Html.Raw((Model as EventInfo).VimeoId)" width="700" height="392" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

    </p>
}

<p>
    @Html.Raw(Model.HtmlBody)
</p>
